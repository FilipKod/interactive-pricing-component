{
  "name": "interactive-pricing-component",
  "version": "1.0.0",
  "description": "frontend mentor challenge solution",
  "main": "index.js",
  "author": "Filip Madunicky",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "sass": "^1.62.1",
    "typescript": "^5.0.4",
    "uglify-js": "^3.17.4"
  },
  "scripts": {
    "sass:dev": "sass --watch --style=expanded ./sass/main.scss ./css/styles.css",
    "ts:watch": "tsc --watch",
    "prefix": "postcss ./css/styles.css --use autoprefixer -d ./css/",
    "sass:prod": "sass --no-source-map --style=compressed sass/main.scss css/styles.css & npm run prefix",
    "uglify-js": "uglifyjs main.js --compress --mangle --output main.js"
  }
}
